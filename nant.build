	<target name="clean">
		<echo message="Cleaning up." />
		<delete dir="bin"/>
		<!--<delete file="package.zip"/>
		<delete file="package.tar.bz2"/>
		<delete file="sourcepackage.zip"/>
		<delete file="sourcepackage.tar.bz2"/>-->
	</target>
	<target name="cleanbuild">
		<echo message="Cleaning up." />
		<delete>
			<fileset>
				<include name="bin/*.dll" />
				<include name="bin/*.exe" />
			</fileset>
		</delete>
